<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>creatingcookie</servlet-name>
        <servlet-class>SessionTracking.creatingcookie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewingcookies</servlet-name>
        <servlet-class>SessionTracking.viewingcookies</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>hiddenform</servlet-name>
        <servlet-class>SessionTracking.hiddenform</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewinghiddenform</servlet-name>
        <servlet-class>SessionTracking.viewinghiddenform</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>urlrewriting</servlet-name>
        <servlet-class>SessionTracking.urlrewriting</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewingurl</servlet-name>
        <servlet-class>SessionTracking.viewingurl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sessionstoring</servlet-name>
        <servlet-class>SessionTracking.sessionstoring</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewingsessiondata</servlet-name>
        <servlet-class>SessionTracking.viewingsessiondata</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>creatingcookie</servlet-name>
        <url-pattern>/creatingcookie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewingcookies</servlet-name>
        <url-pattern>/viewingcookies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>hiddenform</servlet-name>
        <url-pattern>/hiddenform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewinghiddenform</servlet-name>
        <url-pattern>/viewinghiddenform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>urlrewriting</servlet-name>
        <url-pattern>/urlrewriting</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewingurl</servlet-name>
        <url-pattern>/viewingurl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sessionstoring</servlet-name>
        <url-pattern>/sessionstoring</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewingsessiondata</servlet-name>
        <url-pattern>/viewingsessiondata</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
